<?xml version="1.0"?>
<robot name="puzzlebot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Material -->
  <material name="gray">
    <color rgba="0.6 0.6 0.6 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ServoYSirvo_nav2_puzzlebot/meshes/Puzzlebot_Jetson_Lidar_Edition_Base.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ServoYSirvo_nav2_puzzlebot/meshes/Puzzlebot_Jetson_Lidar_Edition_Base.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
    </inertial>
  </link>

  <!-- Caster -->
  <link name="caster_link">
    <visual>
      <origin xyz="-0.095 0.0 -0.03" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ServoYSirvo_nav2_puzzlebot/meshes/Puzzlebot_Caster_Wheel.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_link"/>
    <origin xyz="-0.095 0.0 -0.03" rpy="0 0 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="wheel_l_link">
    <visual>
      <origin xyz="0.052 0.095 -0.0025" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ServoYSirvo_nav2_puzzlebot/meshes/Puzzlebot_Wheel.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="wheel_l_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_l_link"/>
    <origin xyz="0.052 0.095 -0.0025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="wheel_r_link">
    <visual>
      <origin xyz="0.052 -0.095 -0.0025" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://ServoYSirvo_nav2_puzzlebot/meshes/Puzzlebot_Wheel.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="wheel_r_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_r_link"/>
    <origin xyz="0.052 -0.095 -0.0025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- base_footprint a base_link -->
  <link name="base_footprint"/>
  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

</robot>
